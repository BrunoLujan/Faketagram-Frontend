<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5mm"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="50px"
            android:text="Name"
            android:textAlignment="textStart"
            android:textColor="#FFFFFFFF"
            android:autoSizeTextType="uniform"/>

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="25mm"
            android:layout_height="40dp"
            android:layout_marginHorizontal="120dp"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:backgroundTint="@color/yellow" />

        <EditText
            android:id="@+id/txtStatus"
            android:layout_width="262dp"
            android:layout_height="5mm"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="1dp"
            android:background="@drawable/status_text"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"
            android:text="Status"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4mm"
            android:layout_marginHorizontal="1dp"
            android:layout_marginTop="5dp"
            android:text="My Photos"
            android:textAlignment="textStart"
            android:textColor="#FFFFFFFF"
            android:autoSizeTextType="uniform"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="3">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/ic_image_photograph" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="1"
                app:srcCompat="@drawable/ic_image_photograph" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="2"
                app:srcCompat="@drawable/ic_image_photograph" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="0"
                app:srcCompat="@drawable/ic_image_photograph" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="1"
                app:srcCompat="@drawable/ic_image_photograph" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="2"
                app:srcCompat="@drawable/ic_image_photograph" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="2"
                android:layout_column="0"
                app:srcCompat="@drawable/ic_image_photograph" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="2"
                android:layout_column="1"
                app:srcCompat="@drawable/ic_image_photograph" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_row="2"
                android:layout_column="2"
                app:srcCompat="@drawable/ic_image_photograph" />
        </GridLayout>

        <Button
            android:layout_width="25mm"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Add Photo"
            android:textColor="@color/black"
            android:backgroundTint="@color/yellow"
            android:id="@+id/btnAddPhoto"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>