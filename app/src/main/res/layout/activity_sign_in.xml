<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".SignIn">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/faketagram_logo" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            android:text="SIGN IN"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="50dp"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:text="Email"/>

        <EditText
            android:id="@+id/txtEmailSignIn"
            android:layout_width="303dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="50dp"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_view"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="50" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="50dp"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:text="Password"/>

        <EditText
            android:id="@+id/txtPasswordSignIn"
            android:layout_width="303dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="50dp"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_view"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="100" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="30mm"
            android:layout_height="60dp"
            android:layout_marginVertical="80px"
            android:layout_marginHorizontal="95dp"
            android:text="Sign In"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/yellow"/>

        <TextView
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="95dp"
            android:text="Don't you have an account yet?"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="30mm"
            android:layout_height="60dp"
            android:layout_marginHorizontal="95dp"
            android:text="Register now"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"/>

    </LinearLayout>

</LinearLayout>