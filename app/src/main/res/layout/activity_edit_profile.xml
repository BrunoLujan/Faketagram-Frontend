<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/black"
    tools:context=".EditProfile">

    <LinearLayout

        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5mm"
            android:layout_marginVertical="10px"
            android:text="Change profile photo"
            android:textAlignment="textStart"
            android:textColor="#FFFFFFFF"
            android:autoSizeTextType="uniform"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImageEditProfile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher_round" />

            <Button
                android:id="@+id/btnSelectFileEditProfile"
                android:layout_width="135dp"
                android:layout_height="60dp"
                android:layout_marginVertical="70dp"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="@color/yellow"
                android:text="Select file"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="5mm"
            android:layout_marginVertical="50dp"
            android:autoSizeTextType="uniform"
            android:text="Change status"
            android:textAlignment="textStart"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtStatusEditProfile"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:textStyle="italic"
            android:background="@drawable/edit_status_black"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:text="My status"
            android:maxLength="79"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSaveChangesEditProfile"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Save Changes"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/yellow" />

    </LinearLayout>

</LinearLayout>