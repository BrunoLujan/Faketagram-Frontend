<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/black"
    tools:context=".EditProfile">

    <LinearLayout

        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5mm"
            android:layout_marginVertical="10px"
            android:text="Change Photo"
            android:textAlignment="textStart"
            android:textColor="#FFFFFFFF"
            android:autoSizeTextType="uniform"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageChangePhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_image_photograph"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/btnChangePhoto"
            android:layout_width="30mm"
            android:layout_height="60dp"
            android:layout_marginHorizontal="190dp"
            android:layout_marginVertical="80px"
            android:backgroundTint="@color/yellow"
            android:text="Change"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5mm"
            android:layout_marginVertical="10px"
            android:text="Status"
            android:textAlignment="textStart"
            android:textColor="#FFFFFFFF"
            android:autoSizeTextType="uniform"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="265dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="My status"
            android:textColor="@color/white"
            android:background="@drawable/edit_status_black"
            android:maxLines="1" />
        <Button
            android:id="@+id/btnChangeStatus"
            android:layout_width="30mm"
            android:layout_height="60dp"
            android:layout_marginHorizontal="190dp"
            android:layout_marginVertical="80px"
            android:backgroundTint="@color/yellow"
            android:text="Change"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>